<tr id="booking-<%= booking.id %>">
  <td>
    <h5>
      <%= booking.date_wedding.strftime('%A, %b %d') %>
    </h5>
    <%= link_to admin_booking_path(booking) do %>
    <%= booking.name %>
    <% end %>
    <br>
  </td>
  <td>
    <%= booking.email_address %>
    <br>
    <%= booking.phone_number %>
  </td>
  <td><%= booking.location_wedding %></td>
  <td><%= booking.song_choices.count %></td>
  <td><%= booking.playlines.try(:count)  %></td>
  <td class="request-status">
    <% if booking.filmed? %>
    <%= link_to "Film", film_client_booking_path(booking), class: "state-btn active-film" %>
    <% else %>
    <%= link_to "Film", new_admin_film_path(booking_id: booking.id), class: "state-btn" %>
    <% end %>
    <%= link_to "Factuur", update_state_admin_booking_path(booking, new_state: 'invoice'), method: :patch, class: "state-btn #{ booking.btn_state('invoice')}", remote: true %>
    <%= link_to "Betaling", update_state_admin_booking_path(booking, new_state: 'payment'), method: :patch, class: "state-btn #{ booking.btn_state('payment')}", remote: true %>
  </td>
</tr>
