<div id="film-container">
  <table class="table table-striped table-hover">
    <thead class="thead-inverse">
      <tr>
        <th>Naam</th>
        <th>Link Vimeo</th>
        <th>Link Website</th>
        <th>Voorkant</th>

        <th>Kijken</th>
        <th>Aanpassen</th>
        <th>Delete</th>
      </tr>
    </thead>
    <tbody>
     <% @films.each do |film| %>
     <tr>
      <td><%= film.name %></td>
      <td><%= film.video_url %></td>
      <td><%= "https://onelifefilm.nl/films/#{film.slug}" %></td>
      <td><%= film.promo ? 'ja' : 'nee' %></td>

      <td><%= link_to 'Show', "https://onelifefilm.nl/films/#{film.slug}",
      :class => "btn btn-primary"%></td>
      <td><%= link_to 'Edit', edit_admin_film_path(film),
      :class => "btn btn-warning"%></td>
      <td><%= link_to 'Destroy', admin_film_path(film),
      data: {confirm: 'Are you sure?'},
      method: :delete,
      :class => "btn btn-danger"%></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @films %>
</div>
