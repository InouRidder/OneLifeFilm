<style>
  .tab {
    flex: 0 0 50% !important;
  }
</style>
<div id="page-wrapper">

  <div class="container-fluid">

    <!-- Page Heading -->
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">
          Films
        </h1>
        <ol class="breadcrumb">
          <li>
            <i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard</a>
          </li>
          <li class="active">
            <i class="fa fa-desktop"></i> Films
          </li>
        </ol>
      </div>
    </div>


    <div class="container" style="display: flex; justify-content: space-between;">
      <div id="el1">
        <p><a href="/admin/films/new" class="btn btn-primary" role="button"> Nieuwe film toevoegen! &raquo;</a> </p>
      </div>
      <div id="el2">
        <form class="form-inline" action="<%= admin_films_path %>">
          <div class="form-group">
            <input type="text" name="search" class="form-control" placeholder="Zoek een film">
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-default">Zoek!</button>
          </div>
        </form>
      </div>
    </div>

    <div class="tabs">
      <%= link_to admin_films_path, class: "tab active", remote: true do %>
      <h3>Alle films</h3>
      <% end %>
      <%= link_to admin_films_path(promo: 'true'), class: "tab", remote: true do %>
      <h3>Promo films</h3>
      <% end %>
    </div>


    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
      <div class="container">
        <%= render 'films', films: @films %>
      </div>
    </div>
  </div>
</div>


