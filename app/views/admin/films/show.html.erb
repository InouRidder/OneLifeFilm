<div class="container">
  <div class="row" style="padding-top:50px;">
    <div class="col-sm-4 col-xs-12">
      <h3>
        <%= @film.name %>
      </h3>
      <p>
        <%= @film.video_url %>
      </p>
      <p>
        toegevoegd: <%= @film.created_at.strftime("%D, %M, %Y") %>
      </p>
      <p>
        <%= @film.promo ? "Staat op publieke site als promotie film" : "Is geen promotie film" %>
      </p>
      <p>
        <%= link_to "Edit", edit_admin_film_path(@film), class: "btn btn-warning" %>
        <%= link_to "Verwijder", admin_film_path(@film), method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger" %>
      </p>
    </div>
    <div class="col-sm-6 col-xs-12">
      <iframe src="https://player.vimeo.com/video/<%= @film.vimeo_id %>?color=a39254&title=0&byline=0&portrait=0" width="640" height="360" frameborder="0"  webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
    </div>
  </div>
</div>
