<style>
  .tab {
    flex: 0 0 25% !important;
  }
</style>
<div id="page-wrapper">

  <div class="container-fluid">

    <!-- Page Heading -->
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header">
          Liedjes
        </h1>
        <ol class="breadcrumb">
          <li>
            <i class="fa fa-dashboard"></i>  <a href="index.html">Dashboard</a>
          </li>
          <li class="active">
            <i class="fa fa-desktop"></i> liedjes
          </li>
        </ol>
      </div>
    </div>
    <div class="container" style="display: flex; justify-content: space-between;">
      <div id="el1">
        <p><a href="/admin/songs/new" class="btn btn-primary" role="button"> Voeg een nieuw liedje toe! &raquo;</a> </p>
      </div>
      <div id="el2">
        <form class="form-inline" action="<%= admin_songs_path %>">
          <div class="form-group">
            <input type="text" name="search" class="form-control" placeholder="Zoek een liedje">
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-default" date-remote="true">Zoek!</button>
          </div>
        </form>
      </div>
    </div>


    <div class="tabs">
      <%= link_to admin_songs_path, class: "tab active", remote: true do %>
      <h3></h3>
      <p>All</p>
      <% end %>
      <%= link_to slow_admin_songs_path, class: "tab", remote: true do %>
      <h3></h3>
      <p>Slow</p>
      <% end %>
      <%= link_to medium_admin_songs_path, class: "tab", remote: true do %>
      <h3></h3>
      <p>Medium</p>
      <% end %>
      <%= link_to up_admin_songs_path, class: "tab", remote: true do %>
      <h3></h3>
      <p>Up</p>
      <% end %>
    </div>

    <!-- Main jumbotron for a primary marketing message or call to action -->
    <div class="jumbotron">
      <div class="container" id="songs-container">
        <% if @search %>
        <%= link_to 'Verwijder zoekresultaten', admin_songs_path, class: 'btn btn-default' %>
        <% end %>
        <% if @songs %>
        <%= render 'songs', songs: @songs %>
        <% else %>
          No songs
        <% end %>
      </div>
    </div>
  </div>
</div>
